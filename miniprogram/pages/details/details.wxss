/* 轮播 */
.swiper-container {
  width: 100%;
  height: 422rpx;
}
.swiper-container .swiper-item image {
  width: 100%;
  height: 100%;
  display: block;
}
.info-block {
  width: 100%;
  height: 220rpx;
  background: #fff;
  border-bottom: 1rpx solid #efefef;
  padding: 30rpx 30rpx;
}
.info-block .name {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}
.info-block .des {
  color: #999;
  font-size: 28rpx;
  margin-top: 15rpx;
}
.info-block .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.info-block .price text:first-of-type {
  color: #ff9933;
  font-size: 30rpx;
}
.info-block .price text:last-of-type {
  color: #999;
  font-size: 28rpx;
}
/* 农夫说语音 */
.audio-container {
  width: 100%;
  height: 365rpx;
  background: #fff url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 690rpx 287rpx;
  border-top: 1rpx solid #efefef;
  margin-top: 20rpx;
  padding: 90rpx 30rpx 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.audio-container .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.audio-container .audio {
  width: 460rpx;
  height: 62rpx;
  position: relative;
}
.audio .bg {
  width: 100%;
  height: 100%;
}
.audio .time {
  color: #999;
  font-size: 28rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx;
}
.audio .tip {
  color: #999;
  font-size: 24rpx;
  position: absolute;
  right: 0;
  top: 75rpx;
}
/* 商品详情 */
.module-details {
  background: #fff;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
}
.module-details .title {
  height: 90rpx;
  color: #333;
  font-weight: 30rpx;
  display: flex;
  align-items: center;
}
.module-details .title::before {
  content: "";
  width: 8rpx;
  height: 40rpx;
  background: #0dbec6;
  display: block;
  margin-right: 22rpx;
}
.module-details .content {
  padding: 0 30rpx;
}
.module-details .content .img {
  width: 100%;
  height: 1143rpx;
}

/* 基本信息 */
.module-info {
  background: #fff;
  border-top: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  margin-top: 20rpx;
}
.module-info .title {
  height: 90rpx;
  color: #333;
  font-weight: 30rpx;
  display: flex;
  align-items: center;
}
.module-info .title::before {
  content: "";
  width: 8rpx;
  height: 40rpx;
  background: #0dbec6;
  display: block;
  margin-right: 22rpx;
}
.module-info .ul {
  padding: 0 30rpx;
}
.module-info .ul .li {
  height: 70rpx;
  color: #999;
  font-size: 28rpx;
  border-top: 1rpx dashed #efefef;
  display: flex;
  align-items: center;
}
.module-info .ul .li text {
  color: #333;
}
.module-info .ul .li:last-of-type {
  border-bottom: 1rpx dashed #efefef;
  margin-bottom: 35rpx;
}

