/* 顶部banner */
.banner-container {
  width: 100%;
  height: 260rpx;
}
.banner-item {
  width: 100%;
  height: 100%;
}

/* 标签 */
.label-container {
  height: 95rpx;
  background: #fff;
  display: flex;
}
.label-container .label-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.label-container .label-item .icon {
  width: 37rpx;
  height: 37rpx;
}
.label-container .label-item .txt {
  color: #666;
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 本期推荐 */
.module-recommend {
  background: #fff;
  margin-top: 20rpx;
}
.module-recommend .title {
  height: 90rpx;
  color: #333;
  font-weight: 30rpx;
  display: flex;
  align-items: center;
}
.module-recommend .title::before {
  content: "";
  width: 8rpx;
  height: 40rpx;
  background: #0dbec6;
  display: block;
  margin-right: 22rpx;
}
.module-recommend .swiper-container {
  width: 100%;
  height: 620rpx;
}
.swiper-container .swiper-item {
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
}
.swiper-item:first-of-type {
  padding-left: 0;
}
.swiper-item:last-of-type {
  padding-right: 0;
}
.swiper-item .pic {
  width: 100%;
  height: 400rpx;
}
.swiper-item .info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}
.swiper-item .info .lf-block {
  flex: 1;
}
.swiper-item .info .lf-block .des {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}
.swiper-item .info .lf-block .name {
  color: #666;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.swiper-item .info .lf-block .price {
  color: #666;
  font-size: 26rpx;
  margin-top: 15rpx;
}
.swiper-item .info .rg-block {
  width: 200rpx;
}
.swiper-item .info .rg-block .num {
  color: #666;
  font-size: 28rpx;
  text-align: right;
}
.swiper-item .info .rg-block .num text:last-of-type {
  color: #0dbec6;
}
.swiper-item .info .rg-block .btn-exchange {
  width: 180rpx;
  height: 80rpx;
  background: #ff9933;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  margin-left: auto;
  margin-top: 40rpx;
}

/* 下期预告 */
.module-next {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
}
.module-next .title {
  height: 90rpx;
  color: #333;
  font-weight: 30rpx;
  display: flex;
  align-items: center;
}
.module-next .title::before {
  content: "";
  width: 8rpx;
  height: 40rpx;
  background: #0dbec6;
  display: block;
  margin-right: 22rpx;
}
.next-container {
  width: 690rpx;
  height: 240rpx;
  background: #f2f2f2;
  border-radius: 20rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.next-container .pic {
  width: 160rpx;
  height: 160rpx;
}
.next-container .info {
  margin-left: 50rpx;
}
.next-container .info .name {
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}
.next-container .info .publish {
  color: #666;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.next-container .info .time {
  color: #666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  margin-left: -10rpx;
}
.next-container .info .time text {
  width: 46rpx;
  height: 45rpx;
  background: #ff9933;
  border-radius: 6rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 45rpx;
  margin: 0 10rpx;
}

/* 往期水果 */
.module-past {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.module-past .title {
  height: 90rpx;
  color: #333;
  font-weight: 30rpx;
  display: flex;
  align-items: center;
}
.module-past .title::before {
  content: "";
  width: 8rpx;
  height: 40rpx;
  background: #0dbec6;
  display: block;
  margin-right: 22rpx;
}
.past-container {
  padding: 0 30rpx;
}
.past-container .list-con {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.past-container .list-con .list-item {
  width: 220rpx;
  height: 300rpx;
  background: #f4f4f4;
  margin-bottom: 12rpx;
  overflow: hidden;
}
.past-container .list-con .list-item .name {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin: 25rpx auto 0;
}
.past-container .list-con .list-item .date {
  color: #999;
  font-size: 22rpx;
  text-align: center;
  margin: 12rpx auto 0;
}
.past-container .list-con .list-item .pic {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}

/* footer */
.footer {
  width: 100%;
  height: 94rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer .footer-img {
  width: 648rpx;
  height: 27rpx;
}