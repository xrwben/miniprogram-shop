/* 我的 */
.mine-info {
  width: 100%;
  height: 367rpx;
  background: linear-gradient(to bottom, #10bfc7 0%, #ffffff 100%);
  overflow: hidden;
}
.mine-info .avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 8rpx;
  margin: 80rpx auto 0;
  display: block;
}
.mine-info .name {
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx auto 0;
}
.list-con {
  background: #fff;
  margin: 20rpx auto 0;
  padding: 0 25rpx;
}
.list-con .list-item {
  width: 100%;
  height: 88rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-con .list-item text {
  color: #666;
  font-size: 26rpx;
}
.list-con .list-item .arrow {
  width: 27rpx;
  height: 27rpx;
}